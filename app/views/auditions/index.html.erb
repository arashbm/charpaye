<div class='page-header'>
  <h1>سیاهه‌ی ویرایش مطلب <%= @post.title %></h1>
</div>
<table class='table'>
  <thead>
    <tr>
      <th>شماره‌ی ویرایش</th>
      <th>ویراستار</th>
      <th>تاریخ</th>
    </tr>
  </thead>
  <tbody>
    <%= content_tag_for :tr, @audits do |a| %>
      <td><%= link_to a.id ,post_audition_path(@post,a) %></td>
      <td><%= a.user.email %></td>
      <td><%= l a.created_at %> (<%= time_ago_in_words a.created_at %>)</td>
    <% end %>
  </tbody>
</table>
