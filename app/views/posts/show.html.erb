<div class='row span6 offset3'>
  <div class="page-header">
    <h1>
      <%= @post.title %>
      <small><%= @post.user.name %></small>
    </h1>
  </div>

  <%= content_tag :div, @post.body, data:{markdown: @post.body} %>

  <div class="form-actions">
    <%= link_to t('.edit', default: t("helpers.links.edit")), edit_post_path(@post) %> |
    <%= link_to t('.destroy', default: t("helpers.links.destroy")), post_path(@post),
    :method => 'delete', :data => { :confirm => t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) } %> |
    <%= link_to "#{Post.human_attribute_name(:audits)} (#{@post.audits.count})", post_revisions_path(@post) %>
  </div>
</div>
