<div class='row span6 offset3'>
  <div class="page-header">
    <h1>
      <%= @post.title %>
      <small><%= @post.user.name %></small>
    </h1>
  </div>

  <%= content_tag :div, @post.body, data:{markdown: @post.body} %>

  <%= post_footer @post %>
</div>
<div class='row span6 offset3' id='reviews' >
  <div class='page-header'>
    <h2><%= Post.human_attribute_name(:reviews) %></h2>
  </div>
  <%= content_tag_for :article, @post.reviews.order('created_at DESC') do |r| %>
    <%= r.user.email %> در <%= l r.created_at %> (<%= time_ago_in_words r.created_at %>):
    <%= content_tag :div, r.positive, data: { markdown: r.positive }, class: 'review review_positive' %>
    <%= content_tag :div, r.negative, data: { markdown: r.negative }, class: 'review review_negative'%>
    <%= content_tag :div, r.comments, data: { markdown: r.comments }, class: 'review review_comment' %>
    <%= link_to t('helpers.links.destroy'), post_review_path(@post,r), method: :delete, confirm: t('helpers.links.confirm') %>
    <hr />
  <% end %>
  <%= simple_form_for [@post, @post.reviews.new] do |f| %>
    <%= f.input :positive, input_html: { rows: 5, class: 'span6' } %>
    <%= f.input :negative, input_html: { rows: 5, class: 'span6' } %>
    <%= f.input :comments, input_html: { rows: 1, class: 'span6' } %>
    <%= f.button :submit %>
  <% end %>
</div>
